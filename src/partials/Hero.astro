---
import ActionLink from '../components/ActionLink.astro'
import coverImg from '../assets/cover.png'
import downloadIcon from '../assets/download-icon.svg'
import { Image } from 'astro:assets'
import { appInfo } from '../data/app-info'
---

<section class="hero">
  <div class="hero-content container">
    <h1>A maneira mais rápida de usar emojis no navegador</h1>

    <ActionLink href={appInfo.url}>
      <Image src={downloadIcon} width={24} height={24} alt="" />
      Baixar extensão
    </ActionLink>

    <div class="hero-info">
      <span>Versão {appInfo.version}</span>
      <span>{appInfo.size}</span>
      <span>Plataforma: {appInfo.platform}</span>
    </div>
  </div>

  <figure class="hero-image">
    <Image src={coverImg} alt="Seletor de emojis da extensão" />
  </figure>
</section>

<style>
  .hero {
    margin: 1.25rem 0 4rem;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hero-content h1 {
    font-size: clamp(2rem, 1.8904rem + 0.4494vw, 2.25rem);
    line-height: 1.1;
    color: var(--gray-500);

    width: min(100%, 625px);
    margin: 0 auto 1.5rem;
  }

  .hero-info {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 1.5rem 0 2.25rem;
  }

  .hero-info span {
    font-family: 'Inconsolata', monospace;
    font-size: 0.875rem;
    color: var(--gray-300);
  }

  .hero-info span:not(:last-child)::after {
    content: '|';
    margin: 0 0.375rem;
  }

  .hero-image img {
    min-height: 340px;
    object-fit: cover;
  }

  @media only screen and (min-width: 768px) {
    .hero-image {
      width: min(100%, 860px);
      margin: 0 auto;
      padding: 0 1rem;
    }
  }
</style>
